	</parent>
	<groupId>com.spring.batch142</groupId>
	<artifactId>SpringBatch142</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>SpringBatch142</name>
	<description>Demo project for Spring Boot for Batch 142</description>
	<url/>
	<licenses>
		<license/>
	</licenses>
	<developers>
		<developer/>
